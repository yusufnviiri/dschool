@model List<Wage>

@{
    ViewData["Title"] = "staff wages";
}


@if(Model.Count == 0)
{
    <div class="flex justify-between font-poppins  bg-zinc-900 py-2 w-full text-yellow-500    px-11   sm:text-[0.81em]   text-[0.61em]
 text-center sm:mb-5 lg:mb-11 ">

        <a class=" text-white  bg-orange-600 px-2 rounded" asp-controller="Staffs" asp-action="Create">New Staff</a>     

        <h4 class=" "> NO ENTRY.....</h4>
        <a class=" text-white  bg-orange-600 px-4 rounded  " asp-controller="Staffs" asp-action="GetAllStaff">Staff Members</a>



    </div>
}else {

    <div class="flex   justify-between font-poppins  bg-zinc-900 py-2 w-full text-yellow-500    px-4  m-auto  sm:text-[0.81em]   text-[0.61em]
 text-center  ">
        <a class=" text-white  bg-orange-600 px-2 rounded" asp-controller="Students" asp-action="GetStudents"> Students</a>

        <h4 class=" "> STAFF WAGES</h4>
        <a class=" text-white  bg-orange-600 px-4 rounded  " asp-controller="Staffs" asp-action="GetAllStaff">Staff Members</a>
    </div>





    <table class="min-w-[700px]  w-full text-left border-collapse bg-white text-sm font-poppins">
        <thead>
        <tr>
            <th>Date</th>
            <th> Name</th>
            <th> Category</th>
            <th>Job Title</th>
            <th> Status</th>
            <th>Gross Pay</th>
            <th>Net Pay</th>
            <th>pay month</th>
        </tr>
    </thead>
    <tbody>
            @foreach ( var item in Model)           
{                <tr class="text-[0.7em] sm:text-[0.99em]">
            <td>@item.SalaryDate</td>

            <td>
                @item.Staff.FirstName  @item.Staff.LastName
            </td>
            <td>@item.Staff.Category</td>

            <td>@item.Staff.JobTitle</td>
            <td>@item.Staff.Status</td>
            <td>
               @item.Amount
                <span class="">/=</span>
            </td>
            <td>
                @item.NetPay
                <span class="">/= </span>
            </td>
            <td>@item.PayMonth</td>            
        </tr>
      }
    </tbody>
</table>
}
