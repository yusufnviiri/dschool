@model Asset

@{
    ViewData["Title"] = "new asset";
}
<div class="flex   justify-between font-poppins  bg-zinc-900 py-2 w-full text-yellow-500  font-bold  px-4  m-auto  sm:text-[0.81em]   text-[0.61em]
 text-center  ">
    <a class=" text-white  bg-orange-600 px-2 rounded  "
       asp-controller="Students" asp-action="GetStudents">Students</a>

    <h4 class=" "> New Asset</h4>

    <a class=" text-white  bg-orange-600 px-2 rounded  "
       asp-controller="SchoolAffairs" asp-action="GetAssets">Assets</a>
</div>

<div class="w-[40%] m-auto  mt-7 requirement_form">
    <form method="post" action="CreateAsset" class="h-25  row">
        
            <div class="mb-1">
                <label asp-for="Name" class="font-bold text-[0.97em]  ml-2 block">Name</label>
                <input required
                   asp-for="Name"
                placeholder="asset name"
                class=" w-full text-center"
                type="text"
                />
            </div>
            <div class="mb-1">
            <label asp-for="Description" class="font-bold text-[0.97em]  ml-2 block">
                    Description
                </label>
            <input asp-for="Description"
              
                placeholder="description"
                class=" w-full  text:[0.48em] sm:text-[1.23em] py-3 text-center"
                type="text"
                />
            </div>
            <div class="mb-2">
            <label asp-for="AssetValue" class="font-bold text-[0.97em]  ml-2 block">
                    Purchase value
                </label>
                <input required
                   asp-for="AssetValue"
                type="number"
                placeholder="asset value"
                class=" w-full  text:[0.48em] sm:text-[1.23em] py-3 text-center"
                />
            </div>
            <div class="mb-1">
            <label asp-for="Supplier" class="font-bold text-[0.97em]  ml-2 block">
                    Supplier
                </label>
                <input required
                       placeholder="supplier"
                   asp-for="Supplier"
                class=" w-full  text:[0.48em] sm:text-[1.23em] py-3 text-center"
                type="text"
                />
            </div>
            <div class="mb-1">
            <label asp-for="SupplierContact" class="font-bold text-[0.97em]  ml-2 block">
                    Supplier Contact
                </label>
                <input required
                       placeholder="supplier contact"
                   asp-for="SupplierContact"
                class=" w-full  text:[0.48em] sm:text-[1.23em] py-3 text-center"
                type="text"
                />
            </div>
            <div class="mt-3 text-white   font-bold w-full m-auto submit
    text-center  bg-green-700 rounded hover:bg-indigo-800">
            <input class="uppercase text-yellow-100  w-[20%]"
                       type="submit" />
            </div>

    

        </form>
</div>