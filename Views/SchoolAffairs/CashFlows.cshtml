@model NoticeJoinCashFlow


<div class="flex sm:flex-row flex-col  gap-10 w-[95%] mt-8 mx-auto  ">
    <div class="grid grid-cols-1  sm:grid-cols-2 gap-4 sm:w-[45%] justify-between ">
        <div class="flex justify-between  flex-col pr-3 pl-1  py-3  bg-stone-700 text-stone-100 rounded  lg:text-[0.8199em]  text-[0.799em] ">
            <p class="  self-center text-[1.4em] font-bold text-amber-400">
                Uniform{" "}
            </p>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">Type </p>

                <p class="data text-amber-400">Income</p>
            </div>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">Amount </p>

                <p class={"data"}>
                    {UniformIncome}
                    <span>/=</span>
                </p>
            </div>
            <div class=" justify-between hidden ">
                <p class="w-[33%]  font-normal ">Balance</p>

                <p class="data">
                    0<span>/=</span>
                </p>
            </div>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">BAL DUE </p>

                <p class={`${
                   UniformIncome>
                    0 ? "text-green-400" : "text-green-400"
                    } italic`}
                    >
                    {UniformIncome - 0}
                    <span>/=</span>
                </p>
            </div>
        </div>
        <div class="flex justify-between  flex-col pr-3 pl-1  py-3  bg-stone-700 text-stone-100 rounded  lg:text-[0.8199em]  text-[0.799em] ">
            <p class="  self-center text-[1.4em] font-bold text-amber-400">
                School Fees
            </p>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">Type </p>

                <p class="data text-amber-400">Income</p>
            </div>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">Amount </p>

                <p class={"data"}>
                    {feesIncome}
                    <span>/=</span>
                </p>
            </div>
            <div class="hidden justify-between  ">
                <p class="w-[33%]   font-normal">Balance</p>

                <p class="data">
                    {feesBalance}
                    <span>/=</span>
                </p>
            </div>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">BAL DUE </p>

                <p class={`${
                   feesIncome>
                    feesBalance ? "text-green-400" : "text-green-400"
                    } italic`}
                    >
                    {feesIncome - feesBalance}
                    <span>/=</span>
                </p>
            </div>
        </div>

        <div class="flex justify-between  flex-col pr-3 pl-1  py-3  bg-stone-700 text-stone-100 rounded  lg:text-[0.8199em]  text-[0.799em] ">
            <p class="  self-center text-[1.4em] font-bold text-amber-400">
                Requirements{" "}
            </p>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">Type </p>

                <p class="data text-amber-400">Income</p>
            </div>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">Amount </p>

                <p class={"data"}>
                    {requirementsIncome}
                    <span>/=</span>
                </p>
            </div>
            <div class=" justify-between hidden  ">
                <p class="w-[33%]  font-normal">Balance</p>

                <p class="data">
                    {reqDue}
                    <span>/=</span>
                </p>
            </div>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">BAL DUE </p>

                <p class={`${
                   requirementsIncome>
                    reqDue
                    ? "text-green-400"
                    : "text-green-400"
                    } italic`}
                    >
                    {requirementsIncome - reqDue}
                    <span>/=</span>
                </p>
            </div>
        </div>
        <div class="flex justify-between  flex-col pr-3 pl-1  py-3  bg-stone-700 text-stone-100 rounded  lg:text-[0.8199em]  text-[0.799em] ">
            <p class="  self-center text-[1.4em] font-bold text-amber-400">
                Total Revenue
            </p>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">Type </p>

                <p class="data text-amber-400">Income</p>
            </div>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">Paid </p>

                <p class={"data"}>
                    0<span>/=</span>
                </p>
            </div>
            <div class="justify-between hidden  ">
                <p class="w-[33%]  font-normal">Due</p>

                <p class="data">
                    0<span>/=</span>
                </p>
            </div>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">BAL DUE</p>

                <p class={`${
                   feesIncome>
                    feesBalance ? "text-green-400" : "text-green-400"
                    } italic`}
                    >
                    {sumIncomes}
                    <span>/=</span>
                </p>
            </div>
        </div>
    </div>
    <div class="grid grid-cols-1  sm:grid-cols-2 gap-4 sm:w-[45%]  justify-between">
        <div class="flex justify-between  flex-col pr-3 pl-1  py-3  bg-stone-700 text-stone-100 rounded  lg:text-[0.8199em]  text-[0.799em] ">
            <p class="  self-center text-[1.4em] font-bold text-amber-400">
                Salaries
            </p>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">Type </p>

                <p class="data text-amber-400">Expense</p>
            </div>
            <div class="flex justify-between  ">
                <p class="w-[33%]  font-normal">Paid </p>

                <p class={"data"}>
                    {wagesExpense}
                    <span>/=</span>
