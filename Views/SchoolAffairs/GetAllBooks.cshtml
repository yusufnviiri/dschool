@model ICollection<Book> 

@{
    ViewData["Title"] = "books list";
}

@if (Model.Count == 0)
{
        <div class="flex justify-between font-poppins  bg-zinc-900 py-2 w-full text-yellow-500    px-11   sm:text-[0.81em]   text-[0.61em]
 text-center sm:mb-5 lg:mb-11 ">


        <a class=" text-white  bg-orange-600 px-2 rounded" asp-controller="Students" asp-action="GetStudents"> Students</a>

        <h4>No Book ...</h4>
         <a class=" text-white  bg-orange-600 px-2 rounded  "
       asp-controller="SchoolAffairs" asp-action="Createbook">New Book</a>
    </div>

}
 else {

       <div
        class="flex   justify-between font-poppins  bg-zinc-900 py-2 w-full text-yellow-500    px-4  m-auto  sm:text-[0.81em]   text-[0.61em] 
 text-center  "
      >
        
        <h4 class=" "> LIBRARY BOOKS</h4>
    <a class=" text-white  bg-orange-600 px-2 rounded  "
       asp-controller="SchoolAffairs" asp-action="Createbook">New Book</a>

      
      </div>


        <table class="w-full m-auto text-black ">
            <thead>
              <tr class=" ">
                <th>ID</th>
                <th> Author</th>
                <th>Title</th>
                <th>Category</th>
              </tr>
            </thead>
            <tbody>
                  @foreach(var book in Model)  {
     
                                <tr>
                      <td>@book.BookId</td>

                      <td> @book.Author</td>
                      <td>@book.Title</td>

                      <td>@book.Category</td>
                    </tr>
              }
            </tbody>
          </table>



                }