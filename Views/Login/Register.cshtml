@model UserRegistrationModel


@{
    ViewData["Title"] = "Register ";
}

<div class="m-auto  login_form">

    <h4 class=" my-4 font-bold   underline-offset-2 underline
 text-center font-sans ">
        REGISTER 
    </h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Register">
                <div asp-validation-summary="All" class="text-red-700"></div>
         
                <div class="form-group  mb-1">
                    <label asp-for="FirstName" class="control-label  font-bold block"></label>
                    <input asp-for="FirstName" class="form-control   w-full   py-3 text-center" />
                <span asp-validation-for="FirstName" class="text-red-700"></span>
            </div>
                <div class="form-group  mb-1">
                    <label asp-for="LastName" class="control-label  font-bold block"></label>
                   <input asp-for="LastName" class="form-control    w-full   py-3 text-center" />
                    <span asp-validation-for="LastName" class="text-red-700"></span>
            </div>
                <div class="form-group  mb-1">
                    <label asp-for="Email" class="control-label  font-bold block"></label>
                    <input asp-for="Email" class="form-control   w-full   py-3 text-center" />
                    <span asp-validation-for="Email" class="text-red-700"></span>
            </div>

                <div class="form-group  mb-1">
                    <label asp-for="Function" class="control-label   font-bold block"></label>
                    <select class=" w-full text-center " asp-for="Function">
                    <option>Burser</option>
                    <option>Parent</option>
                    <option>Administrator</option>
                    <option>Other</option>
                </select>
                    <span asp-validation-for="Function" class="text-red-700"></span>
            </div>
                <div class="form-group  mb-1">
                    <label asp-for="Password" class="control-label  font-bold block  "></label>
                    <input asp-for="Password" class="form-control    w-full   py-3 text-center" />
                    <span asp-validation-for="Password" class="text-red-700"></span>
            </div>
                <div class="form-group  mb-1">
                    <label asp-for="ConfirmPassword" class="control-label  font-bold block"></label>
                    <input asp-for="ConfirmPassword" class="form-control w-full   py-3 text-center  " />
                    <span asp-validation-for="ConfirmPassword" class="text-red-700"></span>
            </div>
            <div class="mt-1 sm:mt-3 text-white   font-bold w-full m-auto submit
    text-center  bg-green-700 rounded hover:bg-indigo-800">
                    <input class="uppercase text-yellow-100 text-[0.8em] sm:text-[1em] w:[50%] md:w-[20%]"
                       value="Register" type="submit" />
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}