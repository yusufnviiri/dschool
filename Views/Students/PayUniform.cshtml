@model StudentJoinUniform
@{
    ViewData["Title"] = "uniform payment";
}


<div class="flex justify-between font-poppins  bg-zinc-900 py-2 w-full text-yellow-500  font-bold  px-11   sm:text-[0.81em]   text-[0.61em]
 text-center ">

    <a class=" text-white  bg-orange-600 px-4 rounded  " asp-controller="Students" asp-action="CreateStudent">New Student</a>

    <h4 class=" ">  SCHOOL UNIFORM PAYMENT FORM</h4>
    <a class=" text-white  bg-orange-600 px-4 rounded  " asp-controller="Students" asp-action="GetStudents">Students</a>
</div>

<div class=" mt-7 mx-auto w-[70%] ">
    <form method="post" action="PaySchoolFees" class="h-25  row">
        <div class="flex  flex-col sm:flex-row  w-[70%] gap-6 flex-auto flex-grow-1 m-auto">
            <div class="sm:w-[45%]">
                <div class="mb-1">
                    <label asp-for="student.FirstName" class="font-bold ml-2 block">First Name</label>
                    <input asp-for="student.FirstName"
                           class="bg-sky-100 w-full text-center"
                           type="text"
                           disabled />
                </div>
                <input hidden asp-for="student.StudentId" />
                                <input hidden asp-for="student.FirstName" />
                <input hidden asp-for="student.LastName" />

                <div class="mb-1">
                    <label asp-for="student.LastName" class="font-bold  ml-2 block">Last Name</label>
                    <input disabled
                           asp-for="student.LastName"
                           class="bg-sky-100 w-full text-center"
                           type="text" />
                </div>
                <div class="mb-2">
                    <label asp-for="student.Term" class="font-bold ml-2 block">Term</label>
                    <input asp-for="student.Term"
                           disabled
                           class="bg-sky-100 w-full text-center "
                           type="text" />
                </div>
                <div class="mb-2  ">
                    <label class="font-bold ml-2 block"> Class</label>
                    <input disabled
                           asp-for="student.Grade"
                           class="bg-sky-100 w-full text-center "
                           type="text" />
                </div>
            
            </div>
            <div class="sm:w-[45%]">
              
              
                <label class="font-bold ml-2 block">Uniform</label>
                <select required asp-for="uniform.UniformId"
                        class=" w-full text-center ">
                    <option value="select">select</option>

                    @foreach (var item in Model.uniforms)
                    {

                                           <option value="@item.UniformId">
                            @item.Item
                            <span className="px-2">@item.AcademicLevel</span>
                            <span className="px-2">for</span>
                            <span className="px-2 font-bold">@item.Cost</span>
                        </option>

                    }
                </select>

                @if (Model.uniforms.Count == 0)
                {
             
                    <a asp-controller="Students" class="underline underline-offset-2  text-[0.99em] " asp-route-id="0" asp-action="AddUniform">New Uniform</a>
                }


                <div class="mb-2">
                    <label asp-for="uniformPayment.Amount" class="font-bold ml-2 block"> Amount Paid</label>
                    <input asp-for="uniformPayment.Amount" type="number"
                           class="w-full text-center " />
                </div>
                <div class="sm:mb-9 mb-3">
                    <label asp-for="uniformPayment.RecievedBy" class="font-bold ml-2 block">Recieved By</label>
                    <input required
                           asp-for="uniformPayment.RecievedBy"
                           type="text"
                           class=" w-full text-center " />
                </div>
                <div class=" mt-5 text-white   font-bold w-full m-auto   submit
    text-center  bg-green-700 rounded hover:bg-indigo-800">
                    <input class="uppercase text-yellow-100  px-2" type="submit" />
                </div>
            </div>
        </div>
    </form>
</div>
