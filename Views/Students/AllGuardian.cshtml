@model List<Guardian>

@{
    ViewData["Title"] = "parents list";
}


@if (Model.Count == 0)
{
    <div class="flex justify-between font-poppins  bg-zinc-900 py-2 w-full text-yellow-500    px-11   sm:text-[0.81em]   text-[0.61em]
 text-center sm:mb-5 lg:mb-11 ">


        <a class=" text-white  bg-orange-600 px-2 rounded" asp-controller="Students" asp-action="GetStudents"> Students</a>
        <a class=" text-white  bg-orange-600 px-2 rounded     " asp-controller="Students" asp-action="CreateStudent">New Student</a>
    </div>
}
else
{

    <div class="flex   justify-between font-poppins  bg-zinc-900 py-2 w-full text-yellow-500    px-4  m-auto  sm:text-[0.81em]   text-[0.61em]
 text-center  ">
        <a class=" text-white  bg-orange-600 px-2 rounded" asp-controller="Students" asp-action="GetStudents"> Students</a>

        <h4 class=" "> PARENTS </h4>
        <a class=" text-white  bg-orange-600 px-2 rounded  " asp-controller="Students" asp-action="CreateStudent">New Student</a>
    </div>

    



    <div class="flex flex-col">
        <div class=" overflow-x-auto pb-4">
            <div class="min-w-full inline-block align-middle">
                <div class="overflow-hidden  border rounded-lg border-gray-300">
                    <table class="table-auto min-w-full rounded-xl">
                        <thead>



                            <tr class="bg-gray-50">

                                <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize">First Name </th>
                                <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize"> Last Name </th>

                                <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize"> Village </th>
                                <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize">District </th>
                                <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize "> Contact  </th>
                                <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize ">Emai   </th>
                               

                            </tr>
                        </thead>
                        <tbody>




                            @foreach (var parent in Model)
                            {
                                <tr class="   text-[0.7em] sm:text-[0.99em] ">
                                 
                                    <td>

                                        <a asp-controller="Students" asp-action="Student" asp-route-id=" @parent.StudentId">        @parent.FirstName</a>

                                    </td>
                                    <td>
                                        <a asp-controller="Students" asp-action="Student" asp-route-id=" @parent.StudentId">        @parent.LastName</a>
                                    </td>
                                    <td class="">
                                        <a asp-controller="Students" asp-action="Student" asp-route-id=" @parent.StudentId">
                                            @parent.Village
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-controller="Students" asp-action="Student" asp-route-id="  @parent.StudentId">           @parent.District</a>

                                    </td>
                                    <td>
                                        <a asp-controller="Students" asp-action="Student" asp-route-id="   @parent.StudentId">     @parent.Contact</a>


                                    </td>
                                    <td>
                                        <a asp-controller="Students" asp-action="Student" asp-route-id="   @parent.StudentId">            @parent.Email</a>
                                    </td>



                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>










}