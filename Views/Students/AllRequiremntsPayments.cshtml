@model List<RequirementPayment>


@{
    ViewData["Title"] = "all requirements";
}

@if (Model.Count == 0)
{
    <div class="flex justify-between font-poppins  bg-zinc-900 py-2 w-full text-yellow-500    px-11   sm:text-[0.81em]   text-[0.61em]
 text-center sm:mb-5 lg:mb-11 ">
        <a class=" text-white  bg-orange-600 px-2 rounded" asp-controller="Students" asp-action="GetStudents"> Students</a>
        <a class=" text-white  bg-orange-600 px-2 rounded     " asp-controller="Students" asp-action="CreateStudent">New Student</a>


        <a class=" text-white  bg-orange-600 px-2 rounded " asp-route-id="0" asp-controller="Students" asp-action="NewSchoolRequirement">New Requirement</a>
    </div>
}
else
{
   







<div class="flex flex-col">
    <div class=" overflow-x-auto pb-4">
        <div class="min-w-full inline-block align-middle">
            <div class="overflow-hidden  border rounded-lg border-gray-300">
                    <table class="min-w-[700px]  w-full text-left border-collapse bg-white text-sm font-poppins">
                        <thead>


                 









                        <tr class="bg-gray-50">



                        <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize">student </th>
                        <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize"> Description </th>

                                <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize table_hide">Term </th>


                       



                        <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize"> Date </th>
                        <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize">Grade </th>
                        <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize "> Amount</th>
                        <th scope="col" class="p-2 text-left whitespace-nowrap text-sm   text-gray-900 capitalize "> Recieved By</th>
                        </tr>
                    </thead>
                    <tbody>




                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.PaidBy
                                </td>
                                <td>
                                    @item.RequiremntName
                                </td>

                                    <td class="table_hide">
                                    @item.Term

                                </td>
                                <td>
                                    @item.DateOfPayment

                                </td>
                                <td>
                                    @item.Grade

                                </td>
                                <td>
                                    @item.Amount
                                    <span>/=</span>
                                </td>
                                <td>
                                    @item.RecievedBy

                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



}