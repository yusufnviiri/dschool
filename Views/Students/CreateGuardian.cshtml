@{
    ViewData["Title"] = "create parent";
}
@model StudentJoinGuardian



      <div
        class="flex   justify-between font-poppins  bg-zinc-900 py-2 w-full text-yellow-500  font-bold  px-4  m-auto  sm:text-[0.81em]   text-[0.61em] 
 text-center  "
      >
    <a class=" text-white  bg-orange-600 px-2 rounded  "
       asp-controller="Students" asp-action="GetStudents">Students</a>       

        <h4 class=" "> NEW PARENT INFORMATION</h4>

    <a class=" text-white  bg-orange-600 px-2 rounded  "
       asp-controller="Students" asp-action="GetStudents">Parents</a>
      </div>

<div class=" mt-7 mx-auto w-[70%] ">
    <form method="post" action="CreateGuardian" class="h-25  row">

          <div class="flex  w-full gap-6 flex-auto flex-grow-1 m-auto">
            <div class="sm:w-[45%]">
              <div class="mb-1">
                <label asp-for="Guardian.FirstName" class="font-bold ml-2 block">First Name</label>
                <input
                    asp-for="Guardian.FirstName"
                  required
                  min="3"
                  class=" sm:w-full text-center"
                  type="text"
                />
              </div>
              <input hidden  asp-for="Student.StudentId"/>
              <div class="mb-1">
                <label asp-for="Guardian.LastName" class="font-bold  ml-2 block">Last Name</label>
                <input
                  required
               asp-for="Guardian.LastName" 
                  class=" w-full text-center"
                  type="text"
                />
              </div>

              <div class="mb-2">
                <label asp-for="Guardian.Village"  class="font-bold ml-2 block">Village</label>
                <input
                  required
            asp-for="Guardian.Village" 
               
                  class=" w-full text-center "
                  type="text"
                />
              </div>
              <div class="mb-2">
                <label  asp-for="Guardian.District"  class="font-bold ml-2 block">
                
                   District
                </label>
                <input
                  required
            asp-for="Guardian.District" 
                  class=" w-full text-center "
                  type="text"
                />
              </div>
            </div>
            <div class="sm:w-[45%]">
              <div class="mb-1">
                <label asp-for="Guardian.Relationship" class="font-bold ml-2 block">Relationship</label>
                <select
                  required
               asp-for="Guardian.PlaceofOrigin" 
                  class=" w-full text-center "
                >
                  <option value="">select</option>
                  <option>Mother</option>
                  <option>Father</option>
                  <option>Relative</option>
                  <option>Brother</option>
                  <option>Sister</option>
                  <option>Guardian</option>
                  <option>Next of kin</option>
                  <option> Friend</option>
                </select>
              </div>

              <div class="mb-1  ">
                <label  asp-for="Guardian.Contact"  class="font-bold ml-2 block"> Contact</label>
                <input
                  required
                asp-for="Guardian.Contact" 
                  class=" w-full text-center "
                  type="text"
                />
              </div>

              <div class="mb-2">
                <label  asp-for="Guardian.Email"  class="font-bold ml-2 block">Email</label>
                <input
                  required
                  asp-for="Guardian.Email" 
                  type="email"
                  class="w-full text-center "
                />
              </div>

              <div class="mb-2">
                <label asp-for="Guardian.PlaceofOrigin"  class="font-bold ml-2 block"> Place of Origin</label>
                <input
                asp-for="Guardian.PlaceofOrigin" 
                  class=" w-full text-center "
                  type="text"
                />
              </div>
            </div>
          </div>

          <div
            class="mt-3 text-white   font-bold  w-[50%] mx-auto  submit
    text-center  bg-green-700 rounded hover:bg-slate-700"
          >
            <input
              class="uppercase text-yellow-100  w-[20%]"
              type="submit"
            />
          </div>
        </form>
      </div>