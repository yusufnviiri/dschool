@model Requirement
@{
    ViewData["Title"] = "new school requirement";
}

   <div class="flex justify-between font-poppins  bg-zinc-900 py-2 w-full text-yellow-500  font-bold  px-4  m-auto  sm:text-[0.81em]   text-[0.61em] 
 text-center "  >
    <a class=" text-white  bg-orange-600 px-4 rounded  " asp-controller="Students" asp-action="GetStudents">Home</a>


    <h4 class=" "> NEW SCHOOL REQUIREMENT</h4>
    <a class=" text-white  bg-orange-600 px-4 rounded  " asp-controller="Students" asp-action="GetStudents">Studentrequirements</a>  
      </div>

      <div class="w-[40%]  m-auto requirement_form mt-7">
    <form method="post" action="NewSchoolRequirement">
          <div class="mb-1">
            <label asp-for="Name" class="font-bold text-[0.97em]  ml-2 block">
              Item Description
            </label>
            <input
              required
         asp-for="Name"
              class=" w-full  text:[0.48em] sm:text-[1.23em] py-3 text-center"
              type="text"
            />
          </div>

          <div class="mb-2">
            <label asp-for="Amount" class="font-bold text-[0.97em]  ml-2 block">
              Amount
            </label>
            <input
              required
          asp-for="Amount"
              class=" w-full  text:[0.48em] sm:text-[1.23em] py-3 text-center"
            />
          </div>

          <div
            class="mt-3 text-white   font-bold w-full m-auto submit   text-center  bg-green-700 rounded hover:bg-slate-700" >
            <input
              class="uppercase text-yellow-100  w-[20%]"
              type="submit"
            />
          </div>
        </form>
      </div>